
@{
    ViewBag.Title = "Dettaglio utente";
}

<div id="utenti-allevatori-details" class="container">

    <!-- Pannelli modali di conferma azioni -->
    <notification-dialog ref="savedDialog"
                         :title="'Conferma salvataggio'"
                         :message="'Utente salvato correttamente'"></notification-dialog>

    <input hidden id="id" value="@Request["id"]" />

    <!-- ragione sociale / username -->
    <div class="row pb-3">
        <label class="col-sm-2 font-weight-bold">Ragione sociale</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" v-model="utente.RagioneSociale" placeholder="Ragione sociale" />
        </div>
        <label class="col-sm-2 font-weight-bold">Username</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" v-model="utente.Username" placeholder="Username" />
        </div>
    </div>

    <!-- nome / cognome -->
    <div class="row pb-3">
        <label class="col-sm-2 font-weight-bold">Nome</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" v-model="utente.Nome" placeholder="Nome" />
        </div>
        <label class="col-sm-2 font-weight-bold">Cognome</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" v-model="utente.Cognome" placeholder="Cognome" />
        </div>
    </div>

    <!-- sesso / p.iva/cf -->
    <div class="row pb-3">
        <label class="col-sm-2 font-weight-bold">Sesso</label>
        <div class="col-sm-4">
            <select2 class="form-control"
                     :placeholder="'-'"
                     :options="opzioniSesso"
                     :value.sync="utente.Sesso"
                     :value-field="'Value'"
                     :text-field="'Text'" />
        </div>
        <label class="col-sm-2 font-weight-bold">P. Iva / C.F.</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" v-model="utente.PivaCF" />
        </div>
    </div>

    <!-- indirizzo / provincia / città -->
    <div class="row pb-3">
        <label class="col-sm-2 font-weight-bold">Indirizzo</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" v-model="utente.Indirizzo" />
        </div>

        <label class="col-sm-2 font-weight-bold">Provincia</label>
        <div class="col-sm-1">
            <input type="text" class="form-control" v-model="utente.SiglaProvincia" />
        </div>
        <div class="col-sm-3">
            <input type="text" class="form-control" v-model="utente.IdComune" />
        </div>
    </div>

    <!-- telefono / cellulare -->
    <div class="row pb-3">
        <label class="col-sm-2 font-weight-bold">Telefono</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" v-model="utente.Telefono" />
        </div>
        <label class="col-sm-2 font-weight-bold">Cellulare</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" v-model="utente.Cellulare" />
        </div>
    </div>

    <!-- codice allevatore / tipo di latte -->
    <div class="row pb-3">
        <label class="col-sm-2 font-weight-bold">Codice allevatore</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" v-model="utente.CodiceAllevatore" />
        </div>
        <label class="col-sm-2 font-weight-bold">Tipo latte</label>
        <div class="col-sm-4">
            <select2 class="form-control"
                     :options="tipiLatte"
                     :value.sync="utente.IdTipoLatte"
                     :value-field="'Id'"
                     :text-field="'Descrizione'" />
        </div>
    </div>

    <!-- quota del latte / comunicazione quota del latte -->
    <div class="row pb-3">
        <label class="col-sm-2 font-weight-bold">Quota latte(Kg)</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" v-model="utente.QuantitaLatte" />
        </div>
        <label class="col-sm-2 font-weight-bold">Quota latte N°</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" v-model="utente.NumeroComunicazione" />
        </div>
    </div>

    <!-- tipo di profilo / comunicazione quota del latte -->
    <div class="row pb-3">
        <label class="col-sm-2 font-weight-bold">Tipo profilo</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" v-model="utente.IdProfilo" />
        </div>
        <label class="col-sm-2 font-weight-bold">Abilitato</label>
        <div class="col-sm-1">
            <select2 class="form-control"
                     :placeholder="'-'"
                     :options="opzioniAbilitato"
                     :value.sync="utente.Abilitato"
                     :value-field="'Value'"
                     :text-field="'Text'" />
        </div>
        <label class="col-sm-2 font-weight-bold">Visibile</label>
        <div class="col-sm-1">
            <select2 class="form-control"
                     :placeholder="'-'"
                     :options="opzioniVisibile"
                     :value.sync="utente.Visibile"
                     :value-field="'Value'"
                     :text-field="'Text'" />
        </div>
    </div>

    <!-- note -->
    <div class="row pb-3">
        <label class="col-sm-2 font-weight-bold">Note</label>
        <div class="col-sm-10">
            <textarea class="form-control" v-model="utente.Note" rows="3"></textarea>
        </div>
    </div>

    <!-- salva -->
    <div class="row pt-3">
        <div class="col-md-12 text-right">
            <button v-on:click="onSave()" class="btn btn-primary">Salva</button>
        </div>
    </div>

</div>

<script type="application/javascript" src="~/build/utenti_details_page.js"></script>





