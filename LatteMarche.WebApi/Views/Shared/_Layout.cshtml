<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>

    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <!-- Fonts START -->
    <!-- Fonts END -->
    <!-- Global styles START -->
    <link href="@Url.Content("~/Content/plugins/bootstrap/css/bootstrap.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/css/non-responsive.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/plugins/font-awesome/css/font-awesome.min.css")" rel="stylesheet">
    <!-- Global styles END -->
    <!-- Theme styles START -->
    <link href="@Url.Content("~/Content/css/components.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/css/style.css")" rel="stylesheet">

    <link href="@Url.Content("~/Content/css/sticky-footer.css")" rel="stylesheet">

    <!-- Select 2 ( DropDown) -->
    <link href="@Url.Content("~/Content/plugins/select2/select2_metro.css")" rel="stylesheet" />

    <!-- DatePicker -->
    <link href="@Url.Content("~/Content/plugins/bootstrap-datepicker/css/bootstrap-datepicker3.min.css")" rel="stylesheet" />



    <!-- metronic revo slider styles -->
    <link href="@Url.Content("~/Content/css/style-responsive.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/css/themes/green.css")" rel="stylesheet" id="style-color">
    <link href="@Url.Content("~/Content/css/custom.css")" rel="stylesheet">

    <!-- DataTable -->
    <link href="@Url.Content("~/Content/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.css")" rel="stylesheet" />

    <!-- Theme styles END -->

    @if (IsSectionDefined("AddToHead"))
    {
        @RenderSection("AddToHead", required: false)
    }

    <script src="@Url.Content("~/Content/plugins/jquery-1.11.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/plugins/bootstrap/js/bootstrap.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/plugins/bootstrap-file-input/bootstrap.file-input.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/plugins/bootstrap-wizard/jquery.bootstrap.wizard.min.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Content/plugins/knockout/knockout-3.2.0.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/plugins/knockout/knockout.mapping-latest.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Content/plugins/select2/select2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/plugins/knockout-select2/knockout-select2.js")" type="text/javascript"></script>

</head>
<body>
    
    <h1>Latte Marche</h1>

	@RenderBody()

    <!-- Load javascripts at bottom, this will reduce page load time -->
    <!-- BEGIN CORE PLUGINS (REQUIRED FOR ALL PAGES) -->
    <!--[if lt IE 9]>
    <script src="../../assets/global/plugins/respond.min.js"></script>
    <![endif]-->
    <!-- END CORE PLUGINS -->
    <!-- Components plugins -->

    <script src="@Url.Content("~/Content/plugins/datatables/media/js/jquery.dataTables.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/plugins/dataTables.dateFormat.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/plugins/jquery-fileupload/jquery.ui.widget.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/plugins/jquery-fileupload/jquery.iframe-transport.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/plugins/jquery-fileupload/jquery.fileupload.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/plugins/jquery-mask/jquery.maskedinput.min.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Content/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/plugins/bootstrap-datepicker/js/locales/bootstrap-datepicker.it.js")" type="text/javascript"></script>


    <script type="text/javascript">

       @{
            var token = @Session["token"] != null ? @Session["token"] : "";
        }

        var webUrl = '@string.Format("{0}://{1}:{2}{3}", Request.Url.Scheme, Request.Url.Host, Request.Url.Port, Url.Content("~"))';
        var apiUrl = '@string.Format("{0}://{1}:{2}/", Request.Url.Scheme, Request.Url.Host, @System.Configuration.ConfigurationManager.AppSettings["apiUrlPort"])';
    
        function showError(msg, title) {

            if (!msg) {
                msg = "Si è verificato un errore imprevisto, contattare l'amministratore del sistema.";
            }

            if (!title) {
                title = "Errore imprevisto";
            }

            $('#dialog-panel .modal-title').text(title);
            $('#dialog-panel .modal-body').text(msg);

            $('#dialog-panel').modal('show');
        }

        function showMsg(title, msg) {

            $('#dialog-panel .modal-title').text(title);
            $('#dialog-panel .modal-body').text(msg);

            $('#dialog-panel').modal('show');
        }
    
    </script>
</body>
</html>
