<nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
    <a class="navbar-brand" href="/">
        <img class="main-logo" src="~/Content/img/main-logo.svg" />
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    @{
        string allevatoriActive = ViewContext.RouteData.Values["controller"].ToString() == "allevatori" ? "active" : "";
        string utentiActive = ViewContext.RouteData.Values["controller"].ToString() == "utenti" ? "active" : "";
        string trasportatoriActive = ViewContext.RouteData.Values["controller"].ToString() == "trasportatori" ? "active" : "";
        string prelieviActive = ViewContext.RouteData.Values["controller"].ToString() == "prelievi" ? "active" : "";
        string tipiLatteActive = ViewContext.RouteData.Values["controller"].ToString() == "tipilatte" ? "active" : "";
    }

    <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item @allevatoriActive">
                @Html.ActionLink("Allevatori", "Index", "Allevatori", null, new { @class = "nav-link" })
            </li>
            @if (Request.IsAuthenticated)
            {
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Gestione</a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        @Html.ActionLink("Utenti", "Index", "Utenti", null, new { @class = "dropdown-item" })
                        @Html.ActionLink("Trasportatori", "Index", "Trasportatori", null, new { @class = "dropdown-item" })
                        @Html.ActionLink("Prelievi latte", "Index", "Prelievi", null, new { @class = "dropdown-item" })
                        @Html.ActionLink("Tipi latte", "Index", "TipiLatte", null, new { @class = "dropdown-item" })
                        @Html.ActionLink("Acquirenti", "Index", "Acquirenti", null, new { @class = "dropdown-item" })
                        @Html.ActionLink("Destinatari", "Index", "Destinatari", null, new { @class = "dropdown-item" })
                        @Html.ActionLink("Laboratorio analisi", "Index", "LaboratorioAnalisi", null, new { @class = "dropdown-item" })
                        @Html.ActionLink("Sitra", "Index", "Sitra", null, new { @class = "dropdown-item" })
                        @Html.ActionLink("Normative", "Index", "Documenti", null, new { @class = "dropdown-item" })
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Amministrazione</a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        @Html.ActionLink("Azioni", "Index", "Azioni", null, new { @class = "dropdown-item" })
                        @Html.ActionLink("Ruoli", "Index", "Ruoli", null, new { @class = "dropdown-item" })
                    </div>
                </li>
            }

        </ul>
        @if (Request.IsAuthenticated)
        {
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Utente: @User.Identity.Name</a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        @Html.ActionLink("Logout", "Logout", "Account", null, new { @class = "dropdown-item" })
                    </div>
                </li>
            </ul>
        }
        else
        {
            @Html.ActionLink("Area riservata", "Login", "Account", null, new { @class = "btn btn-outline-light my-2 my-sm-0" })
        }
    </div>
</nav>