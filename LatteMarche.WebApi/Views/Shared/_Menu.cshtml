<nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
    <a class="navbar-brand" href="/">Latte Marche</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    @{
        string allevatoriActive = ViewContext.RouteData.Values["controller"].ToString() == "allevatori" ? "active" : "";
        string utentiActive = ViewContext.RouteData.Values["controller"].ToString() == "utenti" ? "active" : "";
        string trasportatoriActive = ViewContext.RouteData.Values["controller"].ToString() == "trasportatori" ? "active" : "";
        string prelieviActive = ViewContext.RouteData.Values["controller"].ToString() == "prelievi" ? "active" : "";
        string tipiLatteActive = ViewContext.RouteData.Values["controller"].ToString() == "tipilatte" ? "active" : "";
    }

    <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item @allevatoriActive">
                @Html.ActionLink("Allevatori", "Index", "Allevatori", null, new { @class = "nav-link" })
            </li>
            @if (Request.IsAuthenticated)
            {
                <li class="nav-item @utentiActive">
                    @Html.ActionLink("Utenti", "Index", "Utenti", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item @trasportatoriActive">
                    @Html.ActionLink("Trasportatori", "Index", "Trasportatori", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item @prelieviActive">
                    @Html.ActionLink("Prelievi latte", "Index", "Prelievi", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item @tipiLatteActive">
                    @Html.ActionLink("Gestione tipi latte", "Index", "TipiLatte", null, new { @class = "nav-link" })
                </li>
            }

        </ul>
        @if (Request.IsAuthenticated)
        {
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Utente: @User.Identity.Name</a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        @Html.ActionLink("Logout", "Logout", "Account", null, new { @class = "dropdown-item" })
                    </div>
                </li>
            </ul>
        }
        else
        {
            @Html.ActionLink("Area riservata", "Login", "Account", null, new { @class = "btn btn-outline-success my-2 my-sm-0" })
        }
    </div>
</nav>