<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
    <section name="jobGroup" type="LatteMarche.Service.JobGroupSection, LatteMarche.Service" allowLocation="true" allowDefinition="Everywhere" />
  </configSections>


  <jobGroup>

    <!-- Clear Temp Folder -->
    <!--<jobConfig name="ClearTempFolderJob" type="LatteMarche.Service.Jobs.ClearTempFolderJob" enabled="true" cron="">
      <jobParam key="tempFolder" value="C:\tmp\pippo" />
    </jobConfig>-->

    <!-- Synch -->
    <jobConfig name="SynchJob" type="LatteMarche.Service.Jobs.SynchJob" enabled="true" cron="" />

  </jobGroup>

  <connectionStrings>
    <add name="DbLatteMarcheContext" connectionString="data source=(local)\SQLEXPRESS;initial catalog=DB_LATTEMARCHE;persist security info=True;user id=sa;password=Admin.Admin;MultipleActiveResultSets=True;App=EntityFramework" providerName="System.Data.SqlClient" />
  </connectionStrings>

  <appSettings>
    <add key="days_depth" value="5000" />
    <add key="range_synch" value="5" />
    <add key="pull" value="false"/>
    <add key="push" value="true"/>
    <add key="ClientSettingsProvider.ServiceUri" value="http://lattemarche-dev.azurewebsites.net" />
    <!-- <add key="ClientSettingsProvider.ServiceUri" value="http://localhost:50364/" /> -->
  </appSettings>

  <log4net>

    <root>
      <level value="DEBUG" />
      <appender-ref ref="Console" />
      <appender-ref ref="ServiceFileAppender" />
    </root>

    <appender name="Console" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{HH:mm:ss} - %message%newline" />
      </layout>
    </appender>

    <appender name="ServiceFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="logs\\richieste.log" />
      <appendToFile value="true" />
      <maximumFileSize value="2000KB" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="10" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %level - %message%newline" />
      </layout>
    </appender>

  </log4net>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
  </startup>

</configuration>